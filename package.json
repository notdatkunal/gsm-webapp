{
  "name": "poc",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
 
  "scripts": {
    "watch:sass": "node-sass --watch sass/main.scss static/css/style.css",
    "devserver": "live-server",
    "start": "npm-run-all  --parallel devserver watch:sass",
    "compile:sass": "node-sass sass/main.scss static/css/style.comp.css",
    "prefix:css": "postcss --use autoprefixer -b 'last 10 versions' static/css/style.comp.css -o static/css/style.prefix.css",
    "compress:css": "node-sass static/css/style.prefix.css static/css/style.css --output-style compressed",
    "build:css": "npm-run-all compile:sass prefix:css compress:css"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "autoprefixer": "^10.4.15",
    "concat": "^1.0.3",
    "live-server": "^1.2.2",
    "liveserver": "^0.1.20",
    "node-sass": "^9.0.0",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^10.1.0"
  }
}
